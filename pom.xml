            </dependency>
            <dependency>
                <groupId>org.openfact</groupId>
                <artifactId>openfact-pe-reports</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Openfact Core -->
            <dependency>
                <groupId>org.openfact</groupId>
                <artifactId>openfact-core</artifactId>
                <version>${openfact.version}</version>
            </dependency>
            <dependency>
                <groupId>org.openfact</groupId>
